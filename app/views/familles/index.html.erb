<h1>Listing familles</h1>

<table>
  <tbody>
    <% @familles.each do |famille| %>
      <tr>
        <td><%= famille.nom %></td>
        <% unless current_user.nil?  %>
          <td class="table-admin"><%= link_to 'Show', famille %> | <%= link_to 'Edit', edit_famille_path(famille) %> | <%= link_to 'Destroy', famille, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless current_user.nil?  %>
  <%= link_to 'New Famille', new_famille_path, :class => "button" %>
<% end %>